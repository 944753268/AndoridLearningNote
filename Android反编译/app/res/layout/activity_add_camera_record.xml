<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <uk.co.senab.photoview.PhotoView android:layout_gravity="center" android:id="@id/iv_photo" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="fitCenter" android:adjustViewBounds="true" />
    <LinearLayout android:layout_gravity="bottom" android:orientation="vertical" android:background="#cd000000" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <EditText android:textSize="@dimen/main_font" android:textColor="@color/white" android:textColorHint="@color/light_font_color" android:id="@id/et_name" android:background="@null" android:padding="@dimen/m_dp" android:paddingLeft="@dimen/m_dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="这里是食物名称" android:layout_weight="1.0" />
            <View android:background="#4dffffff" android:layout_width="fill_parent" android:layout_height="1.0px" android:layout_marginLeft="@dimen/m_dp" android:layout_marginRight="@dimen/m_dp" />
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <EditText android:textSize="@dimen/main_font" android:textColor="@color/white" android:textColorHint="@color/light_font_color" android:id="@id/et_calory" android:background="@null" android:paddingLeft="@dimen/m_dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="所含的热量（可不填）" android:layout_weight="1.0" android:inputType="number" />
                <TextView android:textSize="@dimen/main_font" android:textColor="@color/white" android:gravity="center" android:id="@id/tv_unit" android:padding="@dimen/m_dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="千卡" />
            </LinearLayout>
            <View android:background="#4dffffff" android:layout_width="fill_parent" android:layout_height="1.0px" android:layout_marginLeft="@dimen/m_dp" android:layout_marginRight="@dimen/m_dp" />
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@id/ll_invite_bingo" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ToggleButton android:id="@id/toggle_bingo" android:background="@drawable/toggle_address_selector" android:layout_width="23.0dip" android:layout_height="23.0dip" android:layout_margin="@dimen/m_dp" android:checked="false" android:textOn="" android:textOff="" />
            <TextView android:textSize="@dimen/main_font" android:textColor="@color/white" android:gravity="center" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="请薄荷顾问估算热量" android:layout_centerVertical="true" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>