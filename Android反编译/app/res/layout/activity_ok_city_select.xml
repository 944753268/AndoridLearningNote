        <ScrollView android:scrollbars="none" android:layout_width="fill_parent" android:layout_height="fill_parent" android:fillViewport="true" android:layout_above="@id/view_next" android:layout_alignParentTop="true">
            <LinearLayout android:orientation="vertical" android:id="@id/view_body" android:padding="@dimen/global_dimens_small" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:id="@id/view_gps" android:layout_width="fill_parent" android:layout_height="wrap_content">
