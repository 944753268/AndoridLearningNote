                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:id="@id/view_content" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/global_dimens_normal" />
            </LinearLayout>
        </ScrollView>
        <RelativeLayout android:id="@id/view_next" android:padding="@dimen/global_dimens_small" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <Button android:textColor="@color/common_white" android:id="@id/bt_next" android:background="@drawable/ok_button_blue_selector" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/city_next" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>