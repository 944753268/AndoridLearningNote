<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/global_radius_small" />
            <solid android:color="@color/bt_blue_pressed" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/global_radius_small" />
            <solid android:color="@color/bt_blue_disable" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/global_radius_small" />
            <solid android:color="@color/bt_blue_normal" />
        </shape>
    </item>
</selector>